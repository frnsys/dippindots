# for 8 digit hex values,
# first two values are opacity
# (only works when using a compositor)

COLOR_ICON="#ff4040"
COLOR_URGENT="#ff4040"
# COLOR_FOREGROUND="#222222"
COLOR_FOREGROUND="#ffffff"
# COLOR_BACKGROUND="#00D1DCCC"
# COLOR_BACKGROUND="#ffbaba"
COLOR_BACKGROUND="#000000"
COLOR_FOCUSED_OCCUPIED_FG="#43cc70"
COLOR_FOCUSED_OCCUPIED_BG=$COLOR_BACKGROUND
COLOR_FOCUSED_FREE_FG=$COLOR_FOCUSED_OCCUPIED_FG
COLOR_FOCUSED_FREE_BG=$COLOR_BACKGROUND
COLOR_FOCUSED_URGENT_FG="#B864E1" # "#FC6063"
COLOR_FOCUSED_URGENT_BG=$COLOR_BACKGROUND
COLOR_OCCUPIED_FG="#999999"
COLOR_OCCUPIED_BG=$COLOR_BACKGROUND
COLOR_FREE_FG="#555555"
COLOR_FREE_BG=$COLOR_BACKGROUND
COLOR_URGENT_FG="#FC6063"
COLOR_URGENT_BG=$COLOR_BACKGROUND
COLOR_STATUS_FG=$COLOR_FOREGROUND
COLOR_STATUS_BG=$COLOR_BACKGROUND
