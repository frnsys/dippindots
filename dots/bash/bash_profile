# Load env values.
source /etc/environment

# Make vim the default editor
export EDITOR="vim"
export VISUAL="vim"

# Larger bash history
export HISTSIZE=10000
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL="ignoreboth:erasedups"
export HISTIGNORE="ls:cd:pwd:exit:date:* --help:za *:\
                   kill *:pkill *:aa *:ps *:..:dl:h:which *:man *:\
                   gcm *:gp:ga *:gcm *:\
                   ipython:python:python3"

# Prefer US English and use UTF-8
export LANG="en_US"
export LC_ALL="en_US.UTF-8"

# Case-insensitive globbing (used in pathname expansion)
shopt -s nocaseglob

# Append to the Bash history file, rather than overwriting it
shopt -s histappend

# Autocorrect typos in path names when using `cd`
shopt -s cdspell

# Enable some Bash 4 features when possible:
# * `autocd`, e.g. `**/qux` will enter `./foo/bar/baz/qux`
# * Recursive globbing, e.g. `echo **/*.txt`
for option in autocd globstar; do
	shopt -s "$option" 2> /dev/null
done

# vi keybindings for bash
set -o vi

# Setup GDAL for GIS stuff
export GDAL_DATA=/usr/share/gdal

# Enable esync for wine
export WINEESYNC=1

# Other settings
export XKB_DEFAULT_OPTIONS=caps:super,compose:ralt,compose:rctrl
export MOZ_ENABLE_WAYLAND=1
export GTK_THEME=Adwaita:dark
export BEMENU_OPTS='-i --fn "Source Code Pro Light 9" -l 10 --hf "#598DDC" --tf "#079875" --cw 1'

# CUDA (only available on boxes w/ nvidia gfx)
export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:/usr/local/cuda/lib64"
export CUDA_HOME="/usr/local/cuda"

# Set PATH
for dir in $HOME/.bin $HOME/.cargo/bin /usr/sbin; do
    export PATH="$dir:$PATH"
done

gsettings set org.gnome.desktop.interface color-scheme prefer-dark

[[ -r ~/.bashrc ]] && . ~/.bashrc
