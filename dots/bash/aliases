# Easier navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias -- -="cd -"

# To avoid accidentally overwriting files
alias mv="mv -i"

# Git
alias ga="git add"
alias gaa="git add -A"
alias gcm="git commit -m"
alias gp="git push"
alias gpl="git pull"
alias gcb="git checkout -b"
alias gm="git merge --no-ff"
alias gch="git checkout"
alias gbd="git branch -d"
alias gds="git diff --staged"
alias gsu="git submodule foreach git pull origin master"

# Shortcuts
alias vn="cd ~/notes; vi ."
alias n="cd ~/notes"
alias m="vi ~/notes/logs/memos.md"
alias w="cd ~/work"
alias p="cd ~/projects"
alias dl="cd ~/downloads"
alias t="tmux attach || tmux new"
alias ipy="ipython"
alias mu="mupdf-gl"
alias h="hubble"
alias cb="cargo build"
alias cr="cargo run"
alias publish="port build spaceandtimes; port sync spaceandtimes ftseng@starbase.in:/srv/spaceandtimes"
alias b="cd ~/notes/blog/log; vi $(ls ~/notes/blog/log | tail -n 1)"
alias fb="cd ~/notes/blog/projects/fugue; vi $(ls -v ~/notes/blog/projects/fugue | tail -n 1)"

# Always use color output for `ls`
alias ls="command ls --color"

# enable aliases to be sudoâ€™ed
alias sudo='sudo '
