# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias -- -="cd -"

# to avoid accidentally overwriting files
alias mv="mv -i"

# Git
alias ga="git add"
alias gaa="git add -A"
alias gcm="git commit -m"
alias gp="git push"
alias gpl="git pull"
alias gcb="git checkout -b"
alias gm="git merge --no-ff"
alias gch="git checkout"
alias gbd="git branch -d"
alias gbs="git branch"
alias gst="git status"
alias gds="git diff --staged"

# Shortcuts
alias n="cd ~/notes"
alias b="cd ~/notes/blog"
alias w="cd ~/work"
alias p="cd ~/projects; ll"
alias docs="cd ~/docs; ll"
alias dl="cd ~/downloads"
alias nb="jupyter notebook"
alias py="python"
alias t="tmux attach || tmux new"
alias ipy="ipython"
alias za="zathura"
alias h="hubble"
alias r="ranger"
alias publish="port build spaceandtimes; port sync spaceandtimes ftseng@starbase.in:/srv/spaceandtimes"

# Detect which `ls` flavor is in use
if ls --color > /dev/null 2>&1; then # GNU `ls`
	colorflag="--color"
else # OS X `ls`
	colorflag="-G"
fi

# List all files colorized in long format, including dot files
alias ll="ls -lA ${colorflag}"

# Always use color output for `ls`
alias ls="command ls ${colorflag}"

# enable aliases to be sudoâ€™ed
alias sudo='sudo '

alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
