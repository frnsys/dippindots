export BSPWM_TREE=/tmp/bspwm.tree
export BSPWM_HISTORY=/tmp/bspwm.history
export BSPWM_STACK=/tmp/bspwm.stack

xrdb -merge -I$HOME ~/.Xresources
xset +fp ~/.fonts/
xset fp rehash
fc-cache -fv &
unclutter -root -visible -idle 5 -jitter 5 &
feh --bg-fill ~/.wall.jpg &
# picom --config ~/.config/picom.conf &
batt mon &
sxhkd &
redshift &
dunst &
agenda daemon &

# for web highlighting
maw ~/notes/web/annos.json ~/notes/web/assets &

# Input selection
# Hit CTRL+SPACE+LEFT_SHIFT, in that order
# fcitx -d

# Properly set DBUS_SESSION_BUS_ADDRESS
source /etc/X11/Xsession.d/20dbus_xdg-runtime

# Show panel when cursor is at bottom of screen
xdotool behave_screen_edge bottom exec panel_autohide &

exec ~/.config/bspwm/wm
