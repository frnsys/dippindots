export BSPWM_TREE=/tmp/bspwm.tree
export BSPWM_HISTORY=/tmp/bspwm.history
export BSPWM_STACK=/tmp/bspwm.stack

xrdb -merge -I$HOME ~/.Xresources
xset +fp ~/.fonts/
xset fp rehash
fc-cache -fv &
unclutter -root -visible -idle 5 -jitter 5 &
feh --bg-fill ~/.wall.jpg &
# picom --config ~/.config/picom.conf &
batt mon &
sxhkd &
redshift &
dunst &
agenda daemon &

# for web highlighting
maw ~/notes/web/annos.jsonl ~/notes/web/assets &

# Input selection
# Hit CTRL+SPACE+LEFT_SHIFT, in that order
# fcitx -d

# Properly set DBUS_SESSION_BUS_ADDRESS
source /etc/X11/Xsession.d/20dbus_xdg-runtime

# Show status info in top-right corner
# This leaves behind a lot of zombie processes ("[notify-send] <defunct>")
# which is annoying but shouldn't impact system resources
xdotool behave_screen_edge top-right exec status notify &

# Bluetooth off by default
bt toggle

exec ~/.config/bspwm/wm
