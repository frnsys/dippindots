#!/bin/bash
# Time tracking
# Usage:
# - Start task: task <TASK NAME>
# - Stop task: task stop
# - Task status: task status
# - Task total time: task total <TASK NAME>

TASK_FILE=~/work/_admin/tracking.txt
TASK=$1

function chooseTask {
    TASK=$(cat $TASK_FILE | cut -f2 | tac | uniq | dmenu -l 10 -p "task")
    if [ -z "$TASK" ]; then
        exit 0
    fi
}

if [ $TASK == 'total' ]; then
    TASK=$2
    if [ -z "$TASK" ]; then
        chooseTask
    fi
    TOTAL_SEC=$(cat $TASK_FILE | grep -P "$TASK" | cut -f3 | paste -sd+ | bc)
    ((h=TOTAL_SEC/3600))
    ((m=TOTAL_SEC%3600/60))
    ((s=TOTAL_SEC%60))
    notify-send "${TASK} total: $h:$m:$s"
    echo -e "${TASK}\t$h:$m:$s"
    exit 0

elif [ $TASK == 'total_month' ]; then
    TASK=$2
    if [ -z "$TASK" ]; then
        chooseTask
    fi
    MONTH_START=$(date --date="$(date +'%Y-%m-01')" +%s)
    MONTH_END=$(date --date="$(date +'%Y-%m-01') + 1 month" +%s)
    TOTAL_SEC=$(cat $TASK_FILE | grep -P "$TASK" | awk '$1 >= '$MONTH_START' && $1 < '$MONTH_END | cut -f3 | paste -sd+ | bc)
    ((h=TOTAL_SEC/3600))
    ((m=TOTAL_SEC%3600/60))
    ((s=TOTAL_SEC%60))
    notify-send "${TASK} total: $h:$m:$s"
    echo -e "${TASK}\t$h:$m:$s"
    exit 0

fi

# Check if a task is active
if [ -f $TASK_FILE ]; then
    LAST=$(tail -n 1 $TASK_FILE)
    LAST_START=$(echo -e "$LAST" | cut -f1)
    LAST_TASK=$(echo -e "$LAST" | cut -f2)
    LAST_END=$(echo -e "$LAST" | cut -f3)

    # Check if task is active
    if [ -z "$LAST_END" ]; then
        END_TIME=$(date +%s)
        ELAPSED_SEC=$(($END_TIME - $LAST_START))
        ((h=ELAPSED_SEC/3600))
        ((m=ELAPSED_SEC%3600/60))
        ((s=ELAPSED_SEC%60))
        if [ $TASK == 'status' ]; then
            echo -e "$LAST_TASK\t$h:$m:$s"
        else
            printf "\t${ELAPSED_SEC}\n" >> $TASK_FILE
            notify-send "${LAST_TASK} lasted $h:$m:$s"
        fi
        exit 0
    elif [ $TASK == 'stop' ] || [ $TASK == 'status' ]; then
        exit 0
    fi
fi

if [ -z "$TASK" ]; then
    chooseTask
fi
notify-send "Started ${TASK}"
START_TIME=$(date +%s)
echo -en "${START_TIME}\t$TASK" >> $TASK_FILE
