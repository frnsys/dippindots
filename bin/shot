#!/bin/bash
# take a screenshot

FNAME=$(date +%F-%H-%M-%S)
FPATH=~/docs/shots/$FNAME.png

choice=$(echo -e "full\nregion" | bemenu -p "shot")

case $choice in
    "region")
        grim -g "$(slurp)" $FPATH;;

    "full")
        grim $FPATH;;

    *) exit 1;;
esac

if [ -f $FPATH ]; then
    notify-send -t 5000 "screenshot saved to $FPATH"
    choice=$(echo -e "path\ndata" | bemenu -i -p "copy")
    case $choice in
        "path") echo -n "$FPATH " | wl-copy;;
        "data") wl-copy < "$FPATH";;
        *) ;;
    esac
fi
