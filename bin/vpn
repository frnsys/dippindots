#!/bin/bash
# Note: Run `sudo visudo` add `francis ALL=NOPASSWD: /usr/bin/wg-quick`

# Use: `sudo ls /etc/wireguard`
# Expects /etc/wireguard/{CONFIG}.conf
# CONFIG=airvpn-ch
CONFIG=airvpn-nyc

if [[ $1 == 'up' ]]; then
    sudo wg-quick up $CONFIG

elif [[ $1 == 'down' ]]; then
    sudo wg-quick down $CONFIG

elif [[ $1 == 'status' ]]; then
    if ip l | grep -q $CONFIG
    then
        echo 'on'
    else
        echo 'off'
    fi
fi
